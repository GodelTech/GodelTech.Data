{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build",
            "type": "process",
            "command": "dotnet",
            "args": [
                "run",
                "--project",
                "tools/build/build.csproj",
                "--no-launch-profile",
                "--",
                "Build"
            ],
            "options": {
                "cwd": "${workspaceRoot}"
            },
            "group": "build",
            "presentation": {
                "focus": true
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Unit Tests",
            "type": "process",
            "command": "dotnet",
            "args": [
                "run",
                "--project",
                "tools/build/build.csproj",
                "--no-launch-profile",
                "--",
                "Test"
            ],
            "options": {
                "cwd": "${workspaceRoot}"
            },
            "group": "build",
            "presentation": {
                "focus": true
            },
            "problemMatcher": "$msCompile"
        }
    ]
}